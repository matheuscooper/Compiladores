
<form action="/curso/create" method="post">
    <label class="col-sm-2 col-form-label">Sigla do curso</label>
    <div>
        <input type="text" name="sigla" class="form-control">
    </div>

    <label class="col-sm-2 col-form-label">Nome do curso</label>
    <div>
        <input type="text" name="nome" class="form-control">
    </div>

    <label class="col-sm-2 col-form-label">Descricao</label>
    <div>
        <input type="text" name="descricao" class="form-control">
    </div>
    <div>
        <fieldset class="form-group">
            <legend class="mt-4">Areas</legend>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="area" id="optionsRadios1" value="1">
                <label class="form-check-label" for="optionsRadios1">
                Ciencias Exatas
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="area" id="optionsRadios2" value="2">
                <label class="form-check-label" for="optionsRadios2">
                Ciencias Humanas
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="area" id="optionsRadios3" value="3">
                <label class="form-check-label" for="optionsRadios3">
                Ciencias Biologicas
                </label>
            </div>
        </fieldset>
    </div>

    <br>
    <input type="submit" class="btn btn-primary" value="Enviar">
</form>